<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/LessPassFields.Keys">

    <ImageButton
        android:id="@+id/list_item_remove_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_forever_black_18dp"
        android:tint="@color/colorDarkRed"
        android:padding="8dp"
        android:layout_margin="12dp"
        style="@style/LessPassError"/>

    <TextView
        android:id="@+id/list_item_site_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Site Title"
        android:layout_toStartOf="@id/list_item_remove_image_button"
        android:layout_toLeftOf="@id/list_item_remove_image_button"/>

    <TextView
        android:id="@+id/list_item_login_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_site_text_view"
        android:padding="4dp"
        tools:text="Login Title"
        android:layout_toStartOf="@id/list_item_remove_image_button"
        android:layout_toLeftOf="@id/list_item_remove_image_button"/>

</RelativeLayout>