<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="LessPassBorder">
        <item name="android:background">@drawable/lesspass_border</item>
    </style>

    <style name="LessPassFields">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="LessPass_marginLeft">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="LessPassLeftRight">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="LessPassButtonPrimary">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="LessPassError">
        <item name="android:textColor">@color/colorDarkRed</item>
        <item name="android:background">@drawable/error_border</item>
    </style>

    <style name="LessPassButton">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="WhiteProgress">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

</resources>
